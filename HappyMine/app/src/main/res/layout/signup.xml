<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/backBtn"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/app_logo_splash"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="90dp"/>
    </LinearLayout>

    <!-- 이름 입력 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="이름: " />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/smember_name"/>
    </LinearLayout>

    <!-- 성별 선택 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="성별: " />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-10dp"
            android:id="@+id/gender_group">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"
                android:textSize="18dp"
                android:id="@+id/gender_man"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여"
                android:textSize="18dp"
                android:id="@+id/gender_woman"/>
        </RadioGroup>
    </LinearLayout>

    <!-- 생년월일 입력 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="생년월일: " />

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textAlignment="center"
            android:hint="1900 / 00 / 00"
            android:id="@+id/sbirthdate"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/calender"
            android:id="@+id/calenderBtn"/>
    </LinearLayout>

    <!-- 전화번호 입력 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="전화번호: " />

        <EditText
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/smember_pn"/>
    </LinearLayout>

    <!-- 주소 입력 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="주소: " />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="간단하게 작성"
            android:id="@+id/address"/>
    </LinearLayout>

    <!-- 헬스장 선택 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="헬스장: " />

        <Spinner
            android:id="@+id/gymSpinner"
            android:layout_width="280dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 비밀번호 입력 줄 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="비밀번호: " />

        <EditText
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:inputType="textPassword"
            android:id="@+id/spassword"/>
    </LinearLayout>

    <!-- 비밀번호 생성 규칙 안내 멘트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:textColor="@color/red"
        android:textSize="12dp"
        android:enabled="false"
        android:text="※영어 6자리 이상 입력, 숫자 입력 불가" />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:text="SIGN UP"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="110dp"
        android:id="@+id/ssingupBtn" />


</LinearLayout>